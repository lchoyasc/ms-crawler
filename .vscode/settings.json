{
    "editor.formatOnSave": true,
    "files.eol": "\n",
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "search.exclude": {
        "**/.git": true,
        "**/.venv": true,
    },
}